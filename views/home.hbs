<div class="row">
    <div class="col-12">



        {{#if search}}
        {{> search}}
        {{else}}
        <h2>Full list</h2>
        <p>A list of all the user saved in the database</p>
        {{/if}}

        {{#if status }}
        {{> status}}
        {{/if}}

        <h3>Users</h3>

        <ul>
            {{#each users}}
            <li>{{this.first_name}} {{this.last_name}} <a href="../user/{{this._id}}"> ({{this.username}}) </a></li>
            {{/each}}
        </ul>
    </div>
</div>