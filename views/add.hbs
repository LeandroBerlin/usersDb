<div class="row">
    <div class="col-12">
        <h2>Add user to the database</h2>
    </div>
    <div class="col-sm-6">
        <form class="border border-light p-5" method='POST' action='/users/add'>
            <input type="text" name="firstName" class="form-control mb-4" placeholder="First">
            <input type="text" name="lastName" class="form-control mb-4" placeholder="Last">
            <input type="text" name="username" class="form-control mb-4" placeholder="Username">
            <input type="text" name="email" class="form-control mb-4" placeholder="Email">
            <input type="number" name="age" class="form-control mb-4" placeholder="Age">
            <input type="text" name="short_bio" class="form-control mb-4" placeholder="Bio">
            <input type="text" name="phone_number" class="form-control mb-4" placeholder="Phone number">
            <input type="text" name="street" class="form-control mb-4" placeholder="Street">
            <input type="text" name="street_number" class="form-control mb-4" placeholder="Street number">
            <input type="text" name="zip" class="form-control mb-4" placeholder="Zip">
            <input type="text" name="country" class="form-control mb-4" placeholder="Country">
            <input type="text" name="city" class="form-control mb-4" placeholder="City">
            <input type="text" name="state" class="form-control mb-4" placeholder="State">

            <button class="btn btn-info btn-block my-4" type="submit">Add user</button>
        </form>
    </div>
</div>